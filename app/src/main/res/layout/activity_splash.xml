<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button7"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/button_style"
        android:text="cylindrical"
        android:textColor="#3e2723"
        app:backgroundTint="@null"

        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
        android:id="@+id/triangleBlue"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="177dp"
        android:rotation="200"
        android:src="@drawable/triangle_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleBlue2"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="122dp"
        android:rotation="19"
        android:src="@drawable/triangle_blue"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleYellow"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="233dp"
        android:rotation="243"
        android:src="@drawable/triangle_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleYellow2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="22dp"
        android:rotation="64"
        android:src="@drawable/triangle_yellow"
        app:layout_constraintEnd_toStartOf="@+id/triangleBlue"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleRed"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="282dp"
        android:rotation="289"
        android:src="@drawable/red_triangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleRed2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:rotation="110"
        android:src="@drawable/red_triangle"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/trianglePurple"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="140dp"
        android:rotation="155"
        android:src="@drawable/triangle_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangleGreen"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:rotation="334"
        android:src="@drawable/triangle_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/triangleRed" />


</androidx.constraintlayout.widget.ConstraintLayout>