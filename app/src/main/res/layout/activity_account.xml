<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.View.Account">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TEXT"
        app:srcCompat="@mipmap/padlocj" />

    <ImageView
        android:id="@+id/gift"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="205dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TEXT"
        app:srcCompat="@mipmap/gift_foreground" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TEXT"
        app:srcCompat="@mipmap/award_foreground" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="256dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgift" />


    <Switch
        android:id="@+id/switch_toggle"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:text="Stay up to date with news"
        style="@style/TEXT"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/play"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/button_style"
        android:text="Try golden subscription"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/gold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_toggle" />

    <TextView
        android:id="@+id/textpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="92dp"
        android:text="change your password"
        android:textSize="22dp"
        style="@style/TEXT"
        app:layout_constraintBottom_toTopOf="@+id/textgift"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textgift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="211dp"
        android:text="look your gifs"
        android:textSize="22dp"
        style="@style/TEXT"
        app:layout_constraintBottom_toTopOf="@+id/view6"
        app:layout_constraintStart_toEndOf="@+id/gift"
        app:layout_constraintTop_toBottomOf="@+id/textpassword" />

    <TextView
        android:id="@+id/textpreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="change your preferences"
        android:textSize="22dp"
        style="@style/TEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>