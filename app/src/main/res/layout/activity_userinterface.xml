<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.View.Userinterface">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toTopOf="@+id/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <Button
        android:id="@+id/account"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="357dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@mipmap/parameter_foreground"
        android:paddingRight="70dp"
        android:text="Account"
        android:textAllCaps="false"
        android:textColor="#3e2723"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/security"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@mipmap/security_icon"
        android:paddingRight="70dp"
        android:text="Security"
        android:textAllCaps="false"
        android:textColor="#3e2723"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history" />

    <Button
        android:id="@+id/history"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@mipmap/history_foreground"
        android:paddingRight="70dp"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="#3e2723"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/security"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account" />
</androidx.constraintlayout.widget.ConstraintLayout>